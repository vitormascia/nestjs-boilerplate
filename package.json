{
	"name": "nestjs-boilerplate",
	"version": "1.0.0",
	"description": "Ready-to-use NestJS boilerplate with PostgreSQL, TypeORM (with Migrations), Redis, BullMQ, RBAC, Throttling, Caching and Payload Validation",
	"author": "Vitor Mascia",
	"private": true,
	"type": "module",
	"main": "./build/main.js",
	"license": "UNLICENSED",
	"engines": {
		"node": "^24.8.0"
	},
	"scripts": {
		"verify": "npm run ts:compile && npm run lint:fix",
		"build": "npm install && npm run verify",
		"rebuild": "npm clean-install && npm run verify",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node ./build/main",
		"lint": "eslint . --ext .js,.ts",
		"lint:fix": "npm run lint -- --fix && eslint --fix",
		"ts:compile": "rimraf build && tsc --pretty",
		"ts:compile-watch": "rimraf build && tsc --watch --pretty",
		"ts:check": "tsc --noEmit true --pretty",
		"test": "jest --detectOpenHandles --runInBand --logHeapUsage",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"typeorm": "tsx ./node_modules/typeorm/cli",
		"typeorm:run-migrations": "rimraf build && npm run build && npm run typeorm migration:run -- -d ./src/connections/typeorm.connections.ts",
		"typeorm:generate-migration": "rimraf build && npm run build && npm run typeorm -- -d ./src/connections/typeorm.connections.ts migration:generate ./src/migrations/${npm_config_name:-$(git branch --show-current)}",
		"typeorm:create-migration": "npm run typeorm -- migration:create ./src/migrations/$npm_config_name",
		"typeorm:revert-migration": "npm run typeorm -- -d ./src/connections/typeorm.connections.ts migration:revert",
		"typeorm:cache-clear": "npm run typeorm -- -d ./src/connections/typeorm.connections.ts cache:clear",
		"redis:cli": "docker exec -it redis_server redis-cli",
		"check:dependencies": "npx depcheck"
	},
	"dependencies": {
		"@fastify/helmet": "^13.0.1",
		"@nestjs/axios": "^4.0.1",
		"@nestjs/bullmq": "^11.0.3",
		"@nestjs/cache-manager": "^3.0.1",
		"@nestjs/common": "^11.1.6",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.1.6",
		"@nestjs/platform-fastify": "^11.1.6",
		"@nestjs/terminus": "^11.0.0",
		"@nestjs/throttler": "^6.4.0",
		"@nestjs/typeorm": "^11.0.0",
		"axios": "^1.12.2",
		"axios-retry": "^4.5.0",
		"bignumber.js": "^9.3.1",
		"bullmq": "^5.58.5",
		"cache-manager": "^7.2.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"dotenv": "^17.2.2",
		"ioredis": "^5.7.0",
		"lodash": "^4.17.21",
		"ms": "^2.1.3",
		"pg": "^8.16.3",
		"reflect-metadata": "^0.2.2",
		"rimraf": "^6.0.1",
		"rxjs": "^7.8.2",
		"typeorm": "^0.3.26",
		"uuid": "^13.0.0"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.35.0",
		"@faker-js/faker": "^10.0.0",
		"@jest/types": "^30.0.5",
		"@nestjs/cli": "^11.0.10",
		"@nestjs/schematics": "^11.0.7",
		"@nestjs/testing": "^11.1.6",
		"@stylistic/eslint-plugin": "^5.3.1",
		"@suites/di.nestjs": "^3.0.1",
		"@suites/doubles.jest": "^3.0.1",
		"@suites/unit": "^3.0.1",
		"@swc/cli": "^0.7.8",
		"@swc/core": "^1.13.5",
		"@types/async": "^3.2.25",
		"@types/jest": "^30.0.0",
		"@types/lodash": "^4.17.20",
		"@types/ms": "^2.1.0",
		"@types/node": "^24.5.0",
		"@types/supertest": "^6.0.3",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^8.44.0",
		"@typescript-eslint/parser": "^8.44.0",
		"eslint": "^9.35.0",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-json": "^4.0.1",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-yml": "^1.18.0",
		"globals": "^16.4.0",
		"jest": "^30.1.3",
		"jest-mock": "^30.0.5",
		"source-map-support": "^0.5.21",
		"supertest": "^7.1.4",
		"ts-jest": "^29.4.2",
		"ts-loader": "^9.5.4",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.0"
	}
}
